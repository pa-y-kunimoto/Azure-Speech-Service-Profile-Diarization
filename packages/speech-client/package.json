{
  "name": "@speaker-diarization/speech-client",
  "version": "0.1.0",
  "description": "Azure Speech Service client wrapper for Speaker Diarization",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
