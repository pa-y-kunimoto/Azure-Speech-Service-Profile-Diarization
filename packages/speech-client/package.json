    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@speaker-diarization/core": "*",
    "microsoft-cognitiveservices-speech-sdk": "^1.41.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^2.1.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "keywords": ["azure", "speech-service", "diarization", "sdk"],
  "license": "MIT"
}
